<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.achauhan.marketting_aec.Add_Dealer">
    <LinearLayout

        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/rate"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/erate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"
                            android:hint="RATE/WATT"
                            />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t25watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:inputType="number"
                            android:maxLines="1"
                            android:id="@+id/e25watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="25 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t50watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e50watt"
                            android:inputType="number"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="50 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t75watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e75watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="75 WATT PANELS"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t100watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:inputType="number"
                            android:maxLines="1"
                            android:id="@+id/e100watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="100 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t150watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e150watt"
                            android:inputType="number"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="150 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t200watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e200watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"                            android:hint="200 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/t250watt"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e250watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"                            android:hint="250 WATT PANELS" />
                    </android.support.design.widget.TextInputLayout>




                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="25dp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:background="#eee"
                        android:text="Total amount to be paid : "/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/cash"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText

                            android:id="@+id/ecash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CASH   AMOUNT"
                            android:inputType="number"
                            android:maxLines="1"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/credit_amount"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ecredit_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CREDIT AMOUNT"
                            android:inputType="number"
                            android:maxLines="1"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_marginTop="20dp"
                        android:padding="20dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/bsubmit"
                        android:textColor="#fff"
                        android:onClick="get_Order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit" />






                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
