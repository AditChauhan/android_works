<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
>

    <TextView

        android:id="@+id/check"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:text="Welcome to AEC Power"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    <Button
        android:layout_below="@+id/check"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:id="@+id/adddealer"
        android:onClick="addDealers"
        android:background="@color/colorPrimary"
        android:text="Add Dealers"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:layout_below="@+id/adddealer"
        android:id="@+id/viewDealers"
        android:textColor="#fff"
        android:layout_margin="5dp"


        android:onClick="viewDealers"
        android:text="View Dealers"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:layout_margin="5dp"

        android:layout_below="@+id/viewDealers"
        android:onClick="viewOrders"
        android:id="@+id/vieworders"
        android:textColor="#fff"

        android:background="@color/colorPrimary"

        android:text="View orders"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <Button
        android:layout_alignParentBottom="true"
        android:onClick="signout"
        android:text="Sign out"
        android:background="#ea4335"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>
